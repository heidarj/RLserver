<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Rocket Server</title>
    <link rel="icon" type="image/png" href="/static/rocket128.png"/>
    @Styles.Render("~/Content/css")

</head>
<body>
    @Html.Partial("_Navbar")
    <div class="container">
        @RenderBody()
        <hr />

    </div>
    <footer class="container">
        <p>&copy; @DateTime.Now.Year - Rocket Server</p>
    </footer>
    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
